# AI-TwitterPersona Environment Configuration Template
# Copy this to token.env and fill in your actual values

# ===== TWITTER API CREDENTIALS =====
# Get these from https://developer.twitter.com/
api_key=YOUR_TWITTER_API_KEY
api_secret=YOUR_TWITTER_API_SECRET
access_token=YOUR_ACCESS_TOKEN
access_token_secret=YOUR_ACCESS_TOKEN_SECRET
bearer_token=YOUR_BEARER_TOKEN
USER_ID=YOUR_TWITTER_USER_ID

# ===== GOOGLE GEMINI AI =====
# Get free API key from https://ai.google.dev/
gemini_api_key=YOUR_GEMINI_API_KEY

# ===== BOT CONFIGURATION =====
# How many trending topics to fetch (1-10)
TRENDS_LIMIT=3

# Hours when bot sleeps (comma-separated, 0-23)
SLEEP_HOURS=1,3,9,10

# Night mode hours (general content instead of trends)
NIGHT_MODE_START=1
NIGHT_MODE_END=6

# Tweet interval in minutes
CYCLE_DURATION_MINUTES=60

# Trending topics source URL
TRENDS_URL=https://xtrends.iamrohit.in/turkey

# ===== AI SETTINGS =====
# Available models: gemini-2.5-flash, gemini-2.5-pro
GEMINI_MODEL=gemini-2.5-flash

# AI creativity level (0.0-1.0)
AI_TEMPERATURE=0.85

# ===== DATABASE SETTINGS =====
DB_NAME=twitter.db
TABLE_NAME=tweets

# ===== WEB DASHBOARD SETTINGS =====
# Web server configuration
WEB_PORT=5000
WEB_HOST=127.0.0.1
WEB_DEBUG=False

# Security
FLASK_SECRET_KEY=change-this-secret-key-in-production
ADMIN_USERS=admin
ADMIN_PASSWORD_HASH=$2b$12$example_bcrypt_hash_here

# Production settings
WORKERS=1